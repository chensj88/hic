<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.winning.hic.dao.HlhtDataSetDao">

	<resultMap id="hlhtDataSetResultForList" type="hlhtDataSet">
	</resultMap>

	<resultMap id="hlhtDataSetResult" type="hlhtDataSet" extends="hlhtDataSetResultForList">
	</resultMap>

	<sql id="sf-hlhtDataSet">
	</sql>

	<select id="selectHlhtDataSet" resultMap="hlhtDataSetResult" parameterType="hlhtDataSet">
		select * from HLHT_DATA_SET t where 1 = 1
		<include refid="sf-hlhtDataSet" />
	</select>

	<select id="selectHlhtDataSetList" resultMap="hlhtDataSetResultForList" parameterType="hlhtDataSet">
		select
		 <if test="row.count != null and row.count != ''"> top ${row.count} </if>
		 * from HLHT_DATA_SET t where 1 = 1
		<include refid="sf-hlhtDataSet" />
		<!-- order by ID asc -->
	</select>

	<select id="selectHlhtDataSetCount" resultType="int" parameterType="hlhtDataSet">
		select count(*) from HLHT_DATA_SET t where 1 = 1
		<include refid="sf-hlhtDataSet" />
	</select>

	<select id="selectHlhtDataSetPageList" resultMap="hlhtDataSetResult" parameterType="hlhtDataSet">
		select * from (
			select *, ROW_NUMBER() OVER ( order by id desc ) as _rn 
				from HLHT_DATA_SET t where 1 = 1
			<include refid="sf-hlhtDataSet" />
			<!-- order by ID asc -->
		) temp_table where _rn between #{row.first} + 1 and #{row.first} + #{row.count}
	</select>

	<insert id="insertHlhtDataSet" parameterType="hlhtDataSet">
	<selectKey resultType="String"  order="BEFORE"  keyProperty="id">SELECT CAST(NEWID() AS VARCHAR(36)) AS ID</selectKey>
		insert into HLHT_DATA_SET 
		<trim prefix="(" suffix=")" suffixOverrides=",">
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
		</trim>
	</insert>

	<update id="updateHlhtDataSet" parameterType="HlhtDataSet">
		update HLHT_DATA_SET
		<set>
			<trim suffixOverrides=",">
			</trim>
		</set>
		where
		<if test="id != null and id != ''"> id = #{id} </if>
		<if test="(id == null or id == '') and (map.pks != null and map.pks != '')">
			ID in
			<foreach item="item" collection="map.pks" open="(" separator="," close=")">#{item}</foreach>
		</if>
	</update>

	<delete id="deleteHlhtDataSet" parameterType="HlhtDataSet">
		delete from HLHT_DATA_SET where
		<if test="id != null and id != ''"> id = #{id} </if>
		<if test="(id == null or id == '') and (map.pks != null and map.pks != '')">
			ID in
			<foreach item="item" collection="map.pks" open="(" separator="," close=")">#{item}</foreach>
		</if>
	</delete>

</mapper>