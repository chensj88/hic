<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.winning.hic.dao.HlhtDataCheckDao">

	<resultMap id="hlhtDataCheckResultForList" type="hlhtDataCheck">
		<result column="ID" property="id" jdbcType="VARCHAR" />
		<result column="SOURCE_TYPE" property="sourceType" jdbcType="INTEGER" />
		<result column="P_ID" property="pId" jdbcType="VARCHAR" />
		<result column="NAME" property="name" jdbcType="VARCHAR" />
		<result column="DATA_COUNT" property="dataCount" jdbcType="INTEGER" />
		<result column="ERROR_COLUNM" property="errorColunm" jdbcType="VARCHAR" />
		<result column="ERROR_DESC" property="errorDesc" jdbcType="VARCHAR" />
	</resultMap>

	<resultMap id="hlhtDataCheckResult" type="hlhtDataCheck" extends="hlhtDataCheckResultForList">
	</resultMap>

	<sql id="sf-hlhtDataCheck">
	   <if test="id != null and id != ''"> and t.ID = #{id} </if>
	   <if test="(sourceType != null and sourceType != '') or sourceType == 0"> and t.SOURCE_TYPE = #{sourceType} </if>
	   <if test="pId != null and pId != ''"> and t.P_ID = #{pId} </if>
	   <if test="name != null and name != ''"> and t.NAME = #{name} </if>
	   <if test="(dataCount != null and dataCount != '') or dataCount == 0"> and t.DATA_COUNT = #{dataCount} </if>
	   <if test="errorColunm != null and errorColunm != ''"> and t.ERROR_COLUNM = #{errorColunm} </if>
	   <if test="errorDesc != null and errorDesc != ''"> and t.ERROR_DESC = #{errorDesc} </if>
	</sql>

	<select id="selectHlhtDataCheck" resultMap="hlhtDataCheckResult" parameterType="hlhtDataCheck">
		select * from HLHT_DATA_CHECK t where 1 = 1
		<include refid="sf-hlhtDataCheck" />
	</select>

	<select id="selectHlhtDataCheckList" resultMap="hlhtDataCheckResultForList" parameterType="hlhtDataCheck">
		select
		 <if test="row.count != null and row.count != ''"> top ${row.count} </if>
		 * from HLHT_DATA_CHECK t where 1 = 1
		<include refid="sf-hlhtDataCheck" />
		<!-- order by ID asc -->
	</select>

	<select id="selectHlhtDataCheckCount" resultType="int" parameterType="hlhtDataCheck">
		select count(*) from HLHT_DATA_CHECK t where 1 = 1
		<include refid="sf-hlhtDataCheck" />
	</select>

	<select id="selectHlhtDataCheckPageList" resultMap="hlhtDataCheckResult" parameterType="hlhtDataCheck">
		select * from (
			select *, ROW_NUMBER() OVER ( order by id desc ) as _rn 
				from HLHT_DATA_CHECK t where 1 = 1
			<include refid="sf-hlhtDataCheck" />
			<!-- order by ID asc -->
		) temp_table where _rn between #{row.first} + 1 and #{row.first} + #{row.count}
	</select>

	<insert id="insertHlhtDataCheck" parameterType="hlhtDataCheck">
	<selectKey resultType="String"  order="BEFORE"  keyProperty="id">SELECT CAST(NEWID() AS VARCHAR(36)) AS ID</selectKey>
		insert into HLHT_DATA_CHECK 
		<trim prefix="(" suffix=")" suffixOverrides=",">
		   <if test="id != null and id != ''"> ID, </if>
	       <if test="(sourceType != null and sourceType != '') or sourceType == 0"> SOURCE_TYPE, </if>
		   <if test="pId != null and pId != ''"> P_ID, </if>
		   <if test="name != null and name != ''"> NAME, </if>
	       <if test="(dataCount != null and dataCount != '') or dataCount == 0"> DATA_COUNT, </if>
		   <if test="errorColunm != null and errorColunm != ''"> ERROR_COLUNM, </if>
		   <if test="errorDesc != null and errorDesc != ''"> ERROR_DESC, </if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
		   <if test="id != null and id != ''"> #{id, jdbcType=VARCHAR}, </if>
	       <if test="(sourceType != null and sourceType != '') or sourceType == 0"> #{sourceType, jdbcType=INTEGER}, </if>
		   <if test="pId != null and pId != ''"> #{pId, jdbcType=VARCHAR}, </if>
		   <if test="name != null and name != ''"> #{name, jdbcType=VARCHAR}, </if>
	       <if test="(dataCount != null and dataCount != '') or dataCount == 0"> #{dataCount, jdbcType=INTEGER}, </if>
		   <if test="errorColunm != null and errorColunm != ''"> #{errorColunm, jdbcType=VARCHAR}, </if>
		   <if test="errorDesc != null and errorDesc != ''"> #{errorDesc, jdbcType=VARCHAR}, </if>
		</trim>
	</insert>

	<update id="updateHlhtDataCheck" parameterType="HlhtDataCheck">
		update HLHT_DATA_CHECK
		<set>
			<trim suffixOverrides=",">
			   <if test="id != null and id != ''"> ID = #{id, jdbcType=VARCHAR}, </if>
			   <if test="(sourceType != null and sourceType != '') or sourceType == 0"> SOURCE_TYPE = #{sourceType, jdbcType=INTEGER}, </if>
			   <if test="pId != null and pId != ''"> P_ID = #{pId, jdbcType=VARCHAR}, </if>
			   <if test="name != null and name != ''"> NAME = #{name, jdbcType=VARCHAR}, </if>
			   <if test="(dataCount != null and dataCount != '') or dataCount == 0"> DATA_COUNT = #{dataCount, jdbcType=INTEGER}, </if>
			   <if test="errorColunm != null and errorColunm != ''"> ERROR_COLUNM = #{errorColunm, jdbcType=VARCHAR}, </if>
			   <if test="errorDesc != null and errorDesc != ''"> ERROR_DESC = #{errorDesc, jdbcType=VARCHAR}, </if>
			</trim>
		</set>
		where
		<if test="id != null and id != ''"> id = #{id} </if>
		<if test="(id == null or id == '') and (map.pks != null and map.pks != '')">
			ID in
			<foreach item="item" collection="map.pks" open="(" separator="," close=")">#{item}</foreach>
		</if>
	</update>

	<delete id="deleteHlhtDataCheck" parameterType="HlhtDataCheck">
		delete from HLHT_DATA_CHECK where
		<if test="id != null and id != ''"> id = #{id} </if>
		<if test="(id == null or id == '') and (map.pks != null and map.pks != '')">
			ID in
			<foreach item="item" collection="map.pks" open="(" separator="," close=")">#{item}</foreach>
		</if>
	</delete>

</mapper>