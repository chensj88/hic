<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.winning.hic.dao.HlhtDataListSetDao">

	<resultMap id="hlhtDataListSetResultForList" type="hlhtDataListSet">
		<result column="SOURCE_TYPE" property="sourceType" jdbcType="VARCHAR" />
		<result column="MODEL_CODE" property="modelCode" jdbcType="VARCHAR" />
	</resultMap>

	<resultMap id="hlhtDataListSetResult" type="hlhtDataListSet" extends="hlhtDataListSetResultForList">
	</resultMap>

	<sql id="sf-hlhtDataListSet">
	   <if test="sourceType != null and sourceType != ''"> and t.SOURCE_TYPE = #{sourceType} </if>
	   <if test="modelCode != null and modelCode != ''"> and t.MODEL_CODE = #{modelCode} </if>
	</sql>

	<select id="selectHlhtDataListSet" resultMap="hlhtDataListSetResult" parameterType="hlhtDataListSet">
		select * from HLHT_DATA_LIST_SET t where 1 = 1
		<include refid="sf-hlhtDataListSet" />
	</select>

	<select id="selectHlhtDataListSetList" resultMap="hlhtDataListSetResultForList" parameterType="hlhtDataListSet">
		select
		 <if test="row.count != null and row.count != ''"> top ${row.count} </if>
		 * from HLHT_DATA_LIST_SET t where 1 = 1
		<include refid="sf-hlhtDataListSet" />
		<!-- order by ID asc -->
	</select>

	<select id="selectHlhtDataListSetCount" resultType="int" parameterType="hlhtDataListSet">
		select count(*) from HLHT_DATA_LIST_SET t where 1 = 1
		<include refid="sf-hlhtDataListSet" />
	</select>

	<select id="selectHlhtDataListSetPageList" resultMap="hlhtDataListSetResult" parameterType="hlhtDataListSet">
		select * from (
			select *, ROW_NUMBER() OVER ( order by id desc ) as _rn 
				from HLHT_DATA_LIST_SET t where 1 = 1
			<include refid="sf-hlhtDataListSet" />
			<!-- order by ID asc -->
		) temp_table where _rn between #{row.first} + 1 and #{row.first} + #{row.count}
	</select>

	<insert id="insertHlhtDataListSet" parameterType="hlhtDataListSet">
	<selectKey resultType="String"  order="BEFORE"  keyProperty="id">SELECT CAST(NEWID() AS VARCHAR(36)) AS ID</selectKey>
		insert into HLHT_DATA_LIST_SET 
		<trim prefix="(" suffix=")" suffixOverrides=",">
		   <if test="sourceType != null and sourceType != ''"> SOURCE_TYPE, </if>
		   <if test="modelCode != null and modelCode != ''"> MODEL_CODE, </if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
		   <if test="sourceType != null and sourceType != ''"> #{sourceType, jdbcType=VARCHAR}, </if>
		   <if test="modelCode != null and modelCode != ''"> #{modelCode, jdbcType=VARCHAR}, </if>
		</trim>
	</insert>

	<update id="updateHlhtDataListSet" parameterType="HlhtDataListSet">
		update HLHT_DATA_LIST_SET
		<set>
			<trim suffixOverrides=",">
			   <if test="sourceType != null and sourceType != ''"> SOURCE_TYPE = #{sourceType, jdbcType=VARCHAR}, </if>
			   <if test="modelCode != null and modelCode != ''"> MODEL_CODE = #{modelCode, jdbcType=VARCHAR}, </if>
			</trim>
		</set>
		where
		<if test="id != null and id != ''"> id = #{id} </if>
		<if test="(id == null or id == '') and (map.pks != null and map.pks != '')">
			ID in
			<foreach item="item" collection="map.pks" open="(" separator="," close=")">#{item}</foreach>
		</if>
	</update>

	<delete id="deleteHlhtDataListSet" parameterType="HlhtDataListSet">
		delete from HLHT_DATA_LIST_SET where
		<if test="id != null and id != ''"> id = #{id} </if>
		<if test="(id == null or id == '') and (map.pks != null and map.pks != '')">
			ID in
			<foreach item="item" collection="map.pks" open="(" separator="," close=")">#{item}</foreach>
		</if>
	</delete>

</mapper>