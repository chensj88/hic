<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.winning.hic.dao.HlhtLogDao">

	<resultMap id="hlhtLogResultForList" type="hlhtLog">
		<result column="ID" property="id" jdbcType="VARCHAR" />
		<result column="CONTENT" property="content" jdbcType="LONGVARCHAR" />
		<result column="OPERATOR_TIME" property="operatorTime" jdbcType="TIMESTAMP" />
	</resultMap>

	<resultMap id="hlhtLogResult" type="hlhtLog" extends="hlhtLogResultForList">
	</resultMap>

	<sql id="sf-hlhtLog">
	   <if test="id != null and id != ''"> and t.ID = #{id} </if>
	   <if test="content != null and content != ''"> and t.CONTENT = #{content} </if>
	   <if test="operatorTime != null and operatorTime != ''"> and t.OPERATOR_TIME = #{operatorTime} </if>
	</sql>

	<select id="selectHlhtLog" resultMap="hlhtLogResult" parameterType="hlhtLog">
		select * from HLHT_LOG t where 1 = 1
		<include refid="sf-hlhtLog" />
	</select>

	<select id="selectHlhtLogList" resultMap="hlhtLogResultForList" parameterType="hlhtLog">
		select
		 <if test="row.count != null and row.count != ''"> top ${row.count} </if>
		 * from HLHT_LOG t where 1 = 1
		<include refid="sf-hlhtLog" />
		<!-- order by ID asc -->
	</select>

	<select id="selectHlhtLogCount" resultType="int" parameterType="hlhtLog">
		select count(*) from HLHT_LOG t where 1 = 1
		<include refid="sf-hlhtLog" />
	</select>

	<select id="selectHlhtLogPageList" resultMap="hlhtLogResult" parameterType="hlhtLog">
		select * from (
			select *, ROW_NUMBER() OVER ( order by id desc ) as _rn 
				from HLHT_LOG t where 1 = 1
			<include refid="sf-hlhtLog" />
			<!-- order by ID asc -->
		) temp_table where _rn between #{row.first} + 1 and #{row.first} + #{row.count}
	</select>

	<insert id="insertHlhtLog" parameterType="hlhtLog">
	<selectKey resultType="String"  order="BEFORE"  keyProperty="id">SELECT CAST(NEWID() AS VARCHAR(36)) AS ID</selectKey>
		insert into HLHT_LOG 
		<trim prefix="(" suffix=")" suffixOverrides=",">
		   <if test="id != null and id != ''"> ID, </if>
		   <if test="content != null and content != ''"> CONTENT, </if>
		   <if test="operatorTime != null and operatorTime != ''"> OPERATOR_TIME, </if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
		   <if test="id != null and id != ''"> #{id, jdbcType=VARCHAR}, </if>
		   <if test="content != null and content != ''"> #{content, jdbcType=LONGVARCHAR}, </if>
		   <if test="operatorTime != null and operatorTime != ''"> #{operatorTime, jdbcType=TIMESTAMP}, </if>
		</trim>
	</insert>

	<update id="updateHlhtLog" parameterType="HlhtLog">
		update HLHT_LOG
		<set>
			<trim suffixOverrides=",">
			   <if test="id != null and id != ''"> ID = #{id, jdbcType=VARCHAR}, </if>
			   <if test="content != null and content != ''"> CONTENT = #{content, jdbcType=LONGVARCHAR}, </if>
			   <if test="operatorTime != null and operatorTime != ''"> OPERATOR_TIME = #{operatorTime, jdbcType=TIMESTAMP}, </if>
			</trim>
		</set>
		where
		<if test="id != null and id != ''"> id = #{id} </if>
		<if test="(id == null or id == '') and (map.pks != null and map.pks != '')">
			ID in
			<foreach item="item" collection="map.pks" open="(" separator="," close=")">#{item}</foreach>
		</if>
	</update>

	<delete id="deleteHlhtLog" parameterType="HlhtLog">
		delete from HLHT_LOG where
		<if test="id != null and id != ''"> id = #{id} </if>
		<if test="(id == null or id == '') and (map.pks != null and map.pks != '')">
			ID in
			<foreach item="item" collection="map.pks" open="(" separator="," close=")">#{item}</foreach>
		</if>
	</delete>

</mapper>