<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.winning.hic.dao.HlhtDatabasesListDao">

	<resultMap id="hlhtDatabasesListResultForList" type="hlhtDatabasesList">
		<result column="ID" property="id" jdbcType="BIGINT" />
		<result column="DATA_ALIAS" property="dataAlias" jdbcType="VARCHAR" />
		<result column="IP" property="ip" jdbcType="VARCHAR" />
		<result column="USER_NAME" property="userName" jdbcType="VARCHAR" />
		<result column="PW" property="pw" jdbcType="VARCHAR" />
		<result column="DATABASE_NAME" property="databaseName" jdbcType="VARCHAR" />
		<result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP" />
	</resultMap>

	<resultMap id="hlhtDatabasesListResult" type="hlhtDatabasesList" extends="hlhtDatabasesListResultForList">
	</resultMap>

	<sql id="sf-hlhtDatabasesList">
	   <if test="(id != null and id != '') or id == 0"> and t.ID = #{id} </if>
	   <if test="dataAlias != null and dataAlias != ''"> and t.DATA_ALIAS = #{dataAlias} </if>
	   <if test="ip != null and ip != ''"> and t.IP = #{ip} </if>
	   <if test="userName != null and userName != ''"> and t.USER_NAME = #{userName} </if>
	   <if test="pw != null and pw != ''"> and t.PW = #{pw} </if>
	   <if test="databaseName != null and databaseName != ''"> and t.DATABASE_NAME = #{databaseName} </if>
	   <if test="createTime != null and createTime != ''"> and t.CREATE_TIME = #{createTime} </if>
	</sql>

	<select id="selectHlhtDatabasesList" resultMap="hlhtDatabasesListResult" parameterType="hlhtDatabasesList">
		select * from HLHT_DATABASES_LIST t where 1 = 1
		<include refid="sf-hlhtDatabasesList" />
	</select>

	<select id="selectHlhtDatabasesListList" resultMap="hlhtDatabasesListResultForList" parameterType="hlhtDatabasesList">
		select
		 <if test="row.count != null and row.count != ''"> top ${row.count} </if>
		 * from HLHT_DATABASES_LIST t where 1 = 1
		<include refid="sf-hlhtDatabasesList" />
		<!-- order by ID asc -->
	</select>

	<select id="selectHlhtDatabasesListCount" resultType="int" parameterType="hlhtDatabasesList">
		select count(*) from HLHT_DATABASES_LIST t where 1 = 1
		<include refid="sf-hlhtDatabasesList" />
	</select>

	<select id="selectHlhtDatabasesListPageList" resultMap="hlhtDatabasesListResult" parameterType="hlhtDatabasesList">
		select * from (
			select *, ROW_NUMBER() OVER ( order by id desc ) as _rn 
				from HLHT_DATABASES_LIST t where 1 = 1
			<include refid="sf-hlhtDatabasesList" />
			<!-- order by ID asc -->
		) temp_table where _rn between #{row.first} + 1 and #{row.first} + #{row.count}
	</select>

	<insert id="insertHlhtDatabasesList" parameterType="hlhtDatabasesList">
	<selectKey resultType="String"  order="BEFORE"  keyProperty="id">SELECT CAST(NEWID() AS VARCHAR(36)) AS ID</selectKey>
		insert into HLHT_DATABASES_LIST 
		<trim prefix="(" suffix=")" suffixOverrides=",">
	       <if test="(id != null and id != '') or id == 0"> ID, </if>
		   <if test="dataAlias != null and dataAlias != ''"> DATA_ALIAS, </if>
		   <if test="ip != null and ip != ''"> IP, </if>
		   <if test="userName != null and userName != ''"> USER_NAME, </if>
		   <if test="pw != null and pw != ''"> PW, </if>
		   <if test="databaseName != null and databaseName != ''"> DATABASE_NAME, </if>
		   <if test="createTime != null and createTime != ''"> CREATE_TIME, </if>
		</trim>
		values
		<trim prefix="(" suffix=")" suffixOverrides=",">
	       <if test="(id != null and id != '') or id == 0"> #{id, jdbcType=BIGINT}, </if>
		   <if test="dataAlias != null and dataAlias != ''"> #{dataAlias, jdbcType=VARCHAR}, </if>
		   <if test="ip != null and ip != ''"> #{ip, jdbcType=VARCHAR}, </if>
		   <if test="userName != null and userName != ''"> #{userName, jdbcType=VARCHAR}, </if>
		   <if test="pw != null and pw != ''"> #{pw, jdbcType=VARCHAR}, </if>
		   <if test="databaseName != null and databaseName != ''"> #{databaseName, jdbcType=VARCHAR}, </if>
		   <if test="createTime != null and createTime != ''"> #{createTime, jdbcType=TIMESTAMP}, </if>
		</trim>
	</insert>

	<update id="updateHlhtDatabasesList" parameterType="HlhtDatabasesList">
		update HLHT_DATABASES_LIST
		<set>
			<trim suffixOverrides=",">
			   <if test="(id != null and id != '') or id == 0"> ID = #{id, jdbcType=BIGINT}, </if>
			   <if test="dataAlias != null and dataAlias != ''"> DATA_ALIAS = #{dataAlias, jdbcType=VARCHAR}, </if>
			   <if test="ip != null and ip != ''"> IP = #{ip, jdbcType=VARCHAR}, </if>
			   <if test="userName != null and userName != ''"> USER_NAME = #{userName, jdbcType=VARCHAR}, </if>
			   <if test="pw != null and pw != ''"> PW = #{pw, jdbcType=VARCHAR}, </if>
			   <if test="databaseName != null and databaseName != ''"> DATABASE_NAME = #{databaseName, jdbcType=VARCHAR}, </if>
			   <if test="createTime != null and createTime != ''"> CREATE_TIME = #{createTime, jdbcType=TIMESTAMP}, </if>
			</trim>
		</set>
		where
		<if test="id != null and id != ''"> id = #{id} </if>
		<if test="(id == null or id == '') and (map.pks != null and map.pks != '')">
			ID in
			<foreach item="item" collection="map.pks" open="(" separator="," close=")">#{item}</foreach>
		</if>
	</update>

	<delete id="deleteHlhtDatabasesList" parameterType="HlhtDatabasesList">
		delete from HLHT_DATABASES_LIST where
		<if test="id != null and id != ''"> id = #{id} </if>
		<if test="(id == null or id == '') and (map.pks != null and map.pks != '')">
			ID in
			<foreach item="item" collection="map.pks" open="(" separator="," close=")">#{item}</foreach>
		</if>
	</delete>

</mapper>