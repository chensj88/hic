<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.winning.hic.dao.data.HlhtDataSetDao">

    <resultMap id="hlhtDataSetResultForList" type="com.winning.hic.model.HlhtDataSet">
         <result column="ID" property="id" jdbcType="BIGINT" />
         <result column="P_ID" property="pId" jdbcType="BIGINT" />
         <result column="SOURCE_TYPE" property="sourceType" jdbcType="VARCHAR" />
         <result column="RECORD_NAME" property="recordName" jdbcType="VARCHAR" />
         <result column="PY_CODE" property="pyCode" jdbcType="VARCHAR" />
         <result column="DICT_CODE" property="dictCode" jdbcType="VARCHAR" />
    </resultMap>

    <resultMap id="hlhtDataSetResult" type="com.winning.hic.model.HlhtDataSet" extends="hlhtDataSetResultForList">

    </resultMap>

    <sql id="sql-hlhtDataSet">
        <if test="(id != null and id != '')"> and t.ID = #{id} </if>
        <if test="(pId != null and pId != '')"> and t.P_ID = #{pId} </if>
        <if test="(sourceType != null and sourceType != '')"> and t.SOURCE_TYPE = #{sourceType} </if>
        <if test="(recordName != null and recordName != '')"> and t.RECORD_NAME = #{recordName} </if>
        <if test="(pyCode != null and pyCode != '')"> and t.PY_CODE = #{pyCode} </if>
        <if test="(dictCode != null and dictCode != '')"> and t.DICT_CODE = #{dictCode} </if>
    </sql>

    <insert id="insertHlhtDataSet" parameterType="com.winning.hic.model.HlhtDataSet">
        <selectKey resultType="String"  order="BEFORE"  keyProperty="id">SELECT CAST(NEWID() AS VARCHAR(36)) AS ID</selectKey>
        INSERT INTO HLHT_DATA_SET
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="(id != null and id != '')"> ID , </if>
            <if test="(pId != null and pId != '')"> P_ID , </if>
            <if test="(sourceType != null and sourceType != '')"> SOURCE_TYPE , </if>
            <if test="(recordName != null and recordName != '')"> RECORD_NAME , </if>
            <if test="(pyCode != null and pyCode != '')"> PY_CODE , </if>
            <if test="(dictCode != null and dictCode != '')"> DICT_CODE , </if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="(id != null and id != '')"> #{id , jdbcType= BIGINT },  </if>
            <if test="(pId != null and pId != '')"> #{pId , jdbcType= BIGINT },  </if>
            <if test="(sourceType != null and sourceType != '')"> #{sourceType , jdbcType= VARCHAR },  </if>
            <if test="(recordName != null and recordName != '')"> #{recordName , jdbcType= VARCHAR },  </if>
            <if test="(pyCode != null and pyCode != '')"> #{pyCode , jdbcType= VARCHAR },  </if>
            <if test="(dictCode != null and dictCode != '')"> #{dictCode , jdbcType= VARCHAR },  </if>
        </trim>
    </insert>

    <update id="updateHlhtDataSet" parameterType="com.winning.hic.model.HlhtDataSet">
        UPDATE HLHT_DATA_SET
        <set>
            <trim suffixOverrides=",">
                <if test="(id != null and id != '')"> ID , </if>
                <if test="(pId != null and pId != '')"> P_ID , </if>
                <if test="(sourceType != null and sourceType != '')"> SOURCE_TYPE , </if>
                <if test="(recordName != null and recordName != '')"> RECORD_NAME , </if>
                <if test="(pyCode != null and pyCode != '')"> PY_CODE , </if>
                <if test="(dictCode != null and dictCode != '')"> DICT_CODE , </if>
            </trim>
        </set>
        <where>
            <if test="(id != null and id != '')"> and ID = #{ id }   </if>
            <if test="(id !=null or id!='') and (map.pks != null and map.pks != '')">
                and (ID) in
                <foreach item="item" collection="map.pks" open="(" separator="," close=")"> #{item}</foreach>
            </if>
        </where>
    </update>

    <delete id="deleteHlhtDataSet" parameterType="com.winning.hic.model.HlhtDataSet">
        delete from  HLHT_DATA_SET
        <where>
            <if test="(id != null and id != '')"> and ID = #{ id }   </if>
            <if test="(id !=null or id!='') and (map.pks != null and map.pks != '')">
                and (ID) in
                <foreach item="item" collection="map.pks" open="(" separator="," close=")"> #{item}</foreach>
            </if>
        </where>
    </delete>


    <select id="selectHlhtDataSet" resultMap="hlhtDataSetResult" parameterType="com.winning.hic.model.HlhtDataSet">
        SELECT * FROM HLHT_DATA_SET t
        <where>
            <include refid="sql-hlhtDataSet" />
        </where>
    </select>

    <select id="selectHlhtDataSetList" resultMap="hlhtDataSetResultForList" parameterType="com.winning.hic.model.HlhtDataSet">
        SELECT
        <if test="row.count != null and row.count != ''"> top ${row.count} </if>
        * FROM HLHT_DATA_SET t
        <where>
            <include refid="sql-hlhtDataSet" />
        </where>
        ORDER BY t.ID DESC
    </select>

    <select id="selectHlhtDataSetCount" resultType="int" parameterType="com.winning.hic.model.HlhtDataSet">
        select count(1) from  HLHT_DATA_SET t
        <where>
            <include refid="sql-hlhtDataSet" />
        </where>
    </select>

    <select id="selectHlhtDataSetPageList" resultMap="hlhtDataSetResult" parameterType="com.winning.hic.model.HlhtDataSet">
        SELECT * FROM (
        SELECT t.* ,
        ROW_NUMBER() OVER ( ORDER BY t.ID DESC ) AS _RN
        FROM HLHT_DATA_SET t
        <where>
            <include refid="sql-hlhtDataSet" />
        </where>
        <!-- order by t.ID asc -->
        ) TEMP_TABLE WHERE _RN BETWEEN  #{row.first} + 1 AND #{row.first} + #{row.count}
    </select>


</mapper>