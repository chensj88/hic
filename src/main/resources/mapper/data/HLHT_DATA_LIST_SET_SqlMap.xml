<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.winning.hic.dao.data.HlhtDataListSetDao">

    <resultMap id="hlhtDataListSetResultForList" type="com.winning.hic.model.HlhtDataListSet">
         <result column="SOURCE_TYPE" property="sourceType" jdbcType="VARCHAR" />
         <result column="MODEL_CODE" property="modelCode" jdbcType="VARCHAR" />
         <result column="SOURCE_NAME" property="sourceName" jdbcType="VARCHAR" />
         <result column="MODEL_NAME" property="modelName" jdbcType="VARCHAR" />
    </resultMap>

    <resultMap id="hlhtDataListSetResult" type="com.winning.hic.model.HlhtDataListSet" extends="hlhtDataListSetResultForList">

    </resultMap>

    <sql id="sql-hlhtDataListSet">
        <if test="(sourceType != null and sourceType != '')"> and t.SOURCE_TYPE = #{sourceType} </if>
        <if test="(modelCode != null and modelCode != '')"> and t.MODEL_CODE = #{modelCode} </if>
        <if test="(sourceName != null and sourceName != '')"> and t.SOURCE_NAME = #{sourceName} </if>
        <if test="(modelName != null and modelName != '')"> and t.MODEL_NAME = #{modelName} </if>
    </sql>

    <insert id="insertHlhtDataListSet" parameterType="com.winning.hic.model.HlhtDataListSet">
        <selectKey resultType="String"  order="BEFORE"  keyProperty="id">SELECT CAST(NEWID() AS VARCHAR(36)) AS ID</selectKey>
        INSERT INTO HLHT_DATA_LIST_SET
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="(sourceType != null and sourceType != '')"> SOURCE_TYPE , </if>
            <if test="(modelCode != null and modelCode != '')"> MODEL_CODE , </if>
            <if test="(sourceName != null and sourceName != '')"> SOURCE_NAME , </if>
            <if test="(modelName != null and modelName != '')"> MODEL_NAME , </if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="(sourceType != null and sourceType != '')"> #{sourceType , jdbcType= VARCHAR },  </if>
            <if test="(modelCode != null and modelCode != '')"> #{modelCode , jdbcType= VARCHAR },  </if>
            <if test="(sourceName != null and sourceName != '')"> #{sourceName , jdbcType= VARCHAR },  </if>
            <if test="(modelName != null and modelName != '')"> #{modelName , jdbcType= VARCHAR },  </if>
        </trim>
    </insert>

    <update id="updateHlhtDataListSet" parameterType="com.winning.hic.model.HlhtDataListSet">
        UPDATE HLHT_DATA_LIST_SET
        <set>
            <trim suffixOverrides=",">
                <if test="(sourceType != null and sourceType != '')"> SOURCE_TYPE , </if>
                <if test="(modelCode != null and modelCode != '')"> MODEL_CODE , </if>
                <if test="(sourceName != null and sourceName != '')"> SOURCE_NAME , </if>
                <if test="(modelName != null and modelName != '')"> MODEL_NAME , </if>
            </trim>
        </set>
        <where>
            <if test="(sourceType != null and sourceType != '')"> and SOURCE_TYPE = #{ sourceType }   </if>
            <if test="(modelCode != null and modelCode != '')"> and MODEL_CODE = #{ modelCode }   </if>
            <if test="(sourceType !=null or sourceType!='') and (modelCode !=null or modelCode!='') and (map.pks != null and map.pks != '')">
                and (SOURCE_TYPE,MODEL_CODE) in
                <foreach item="item" collection="map.pks" open="(" separator="," close=")"> #{item}</foreach>
            </if>
        </where>
    </update>

    <delete id="deleteHlhtDataListSet" parameterType="com.winning.hic.model.HlhtDataListSet">
        delete from  HLHT_DATA_LIST_SET
        <where>
            <if test="(sourceType != null and sourceType != '')"> and SOURCE_TYPE = #{ sourceType }   </if>
            <if test="(modelCode != null and modelCode != '')"> and MODEL_CODE = #{ modelCode }   </if>
            <if test="(sourceType !=null or sourceType!='') and (modelCode !=null or modelCode!='') and (map.pks != null and map.pks != '')">
                and (SOURCE_TYPE,MODEL_CODE) in
                <foreach item="item" collection="map.pks" open="(" separator="," close=")"> #{item}</foreach>
            </if>
        </where>
    </delete>


    <select id="selectHlhtDataListSet" resultMap="hlhtDataListSetResult" parameterType="com.winning.hic.model.HlhtDataListSet">
        SELECT * FROM HLHT_DATA_LIST_SET t
        <where>
            <include refid="sql-hlhtDataListSet" />
        </where>
    </select>

    <select id="selectHlhtDataListSetList" resultMap="hlhtDataListSetResultForList" parameterType="com.winning.hic.model.HlhtDataListSet">
        SELECT
        <if test="row.count != null and row.count != ''"> top ${row.count} </if>
        * FROM HLHT_DATA_LIST_SET t
        <where>
            <include refid="sql-hlhtDataListSet" />
        </where>
        ORDER BY t.SOURCE_TYPE,t.MODEL_CODE DESC
    </select>

    <select id="selectHlhtDataListSetCount" resultType="int" parameterType="com.winning.hic.model.HlhtDataListSet">
        select count(1) from  HLHT_DATA_LIST_SET t
        <where>
            <include refid="sql-hlhtDataListSet" />
        </where>
    </select>

    <select id="selectHlhtDataListSetPageList" resultMap="hlhtDataListSetResult" parameterType="com.winning.hic.model.HlhtDataListSet">
        SELECT * FROM (
        SELECT t.* ,
        ROW_NUMBER() OVER ( ORDER BY t.SOURCE_TYPE,t.MODEL_CODE DESC ) AS _RN
        FROM HLHT_DATA_LIST_SET t
        <where>
            <include refid="sql-hlhtDataListSet" />
        </where>
        <!-- order by t.SOURCE_TYPE,t.MODEL_CODE asc -->
        ) TEMP_TABLE WHERE _RN BETWEEN  #{row.first} + 1 AND #{row.first} + #{row.count}
    </select>


</mapper>