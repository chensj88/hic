<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.winning.hic.dao.data.HlhtLogDao">

    <resultMap id="hlhtLogResultForList" type="com.winning.hic.model.HlhtLog">
         <result column="ID" property="id" jdbcType="VARCHAR" />
         <result column="CONTENT" property="content" jdbcType="VARCHAR" />
         <result column="OPERATOR_TIME" property="operatorTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <resultMap id="hlhtLogResult" type="com.winning.hic.model.HlhtLog" extends="hlhtLogResultForList">

    </resultMap>

    <sql id="sql-hlhtLog">
        <if test="(id != null and id != '')"> and t.ID = #{id} </if>
        <if test="(content != null and content != '')"> and t.CONTENT = #{content} </if>
        <if test="(operatorTime != null and operatorTime != '')"> and t.OPERATOR_TIME = #{operatorTime} </if>
    </sql>

    <insert id="insertHlhtLog" parameterType="com.winning.hic.model.HlhtLog">
        <selectKey resultType="String"  order="BEFORE"  keyProperty="id">SELECT CAST(NEWID() AS VARCHAR(36)) AS ID</selectKey>
        INSERT INTO HLHT_LOG
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="(id != null and id != '')"> ID , </if>
            <if test="(content != null and content != '')"> CONTENT , </if>
            <if test="(operatorTime != null and operatorTime != '')"> OPERATOR_TIME , </if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="(id != null and id != '')"> #{id , jdbcType= VARCHAR },  </if>
            <if test="(content != null and content != '')"> #{content , jdbcType= VARCHAR },  </if>
            <if test="(operatorTime != null and operatorTime != '')"> #{operatorTime , jdbcType= TIMESTAMP },  </if>
        </trim>
    </insert>

    <update id="updateHlhtLog" parameterType="com.winning.hic.model.HlhtLog">
        UPDATE HLHT_LOG
        <set>
            <trim suffixOverrides=",">
                <if test="(id != null and id != '')"> ID , </if>
                <if test="(content != null and content != '')"> CONTENT , </if>
                <if test="(operatorTime != null and operatorTime != '')"> OPERATOR_TIME , </if>
            </trim>
        </set>
        <where>
            <if test="(id != null and id != '')"> and ID = #{ id }   </if>
            <if test="(id !=null or id!='') and (map.pks != null and map.pks != '')">
                and (ID) in
                <foreach item="item" collection="map.pks" open="(" separator="," close=")"> #{item}</foreach>
            </if>
        </where>
    </update>

    <delete id="deleteHlhtLog" parameterType="com.winning.hic.model.HlhtLog">
        delete from  HLHT_LOG
        <where>
            <if test="(id != null and id != '')"> and ID = #{ id }   </if>
            <if test="(id !=null or id!='') and (map.pks != null and map.pks != '')">
                and (ID) in
                <foreach item="item" collection="map.pks" open="(" separator="," close=")"> #{item}</foreach>
            </if>
        </where>
    </delete>


    <select id="selectHlhtLog" resultMap="hlhtLogResult" parameterType="com.winning.hic.model.HlhtLog">
        SELECT * FROM HLHT_LOG t
        <where>
            <include refid="sql-hlhtLog" />
        </where>
    </select>

    <select id="selectHlhtLogList" resultMap="hlhtLogResultForList" parameterType="com.winning.hic.model.HlhtLog">
        SELECT
        <if test="row.count != null and row.count != ''"> top ${row.count} </if>
        * FROM HLHT_LOG t
        <where>
            <include refid="sql-hlhtLog" />
        </where>
        ORDER BY t.ID DESC
    </select>

    <select id="selectHlhtLogCount" resultType="int" parameterType="com.winning.hic.model.HlhtLog">
        select count(1) from  HLHT_LOG t
        <where>
            <include refid="sql-hlhtLog" />
        </where>
    </select>

    <select id="selectHlhtLogPageList" resultMap="hlhtLogResult" parameterType="com.winning.hic.model.HlhtLog">
        SELECT * FROM (
        SELECT t.* ,
        ROW_NUMBER() OVER ( ORDER BY t.ID DESC ) AS _RN
        FROM HLHT_LOG t
        <where>
            <include refid="sql-hlhtLog" />
        </where>
        <!-- order by t.ID asc -->
        ) TEMP_TABLE WHERE _RN BETWEEN  #{row.first} + 1 AND #{row.first} + #{row.count}
    </select>


</mapper>