<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.winning.hic.dao.data.HlhtDataCheckDao">

    <resultMap id="hlhtDataCheckResultForList" type="com.winning.hic.model.HlhtDataCheck">
         <result column="ID" property="id" jdbcType="VARCHAR" />
         <result column="SOURCE_TYPE" property="sourceType" jdbcType="INTEGER" />
         <result column="P_ID" property="pId" jdbcType="VARCHAR" />
         <result column="NAME" property="name" jdbcType="VARCHAR" />
         <result column="DATA_COUNT" property="dataCount" jdbcType="INTEGER" />
         <result column="ERROR_COLUNM" property="errorColunm" jdbcType="VARCHAR" />
         <result column="ERROR_DESC" property="errorDesc" jdbcType="VARCHAR" />
    </resultMap>

    <resultMap id="hlhtDataCheckResult" type="com.winning.hic.model.HlhtDataCheck" extends="hlhtDataCheckResultForList">

    </resultMap>

    <sql id="sql-hlhtDataCheck">
        <if test="(id != null and id != '')"> and t.ID = #{id} </if>
        <if test="(sourceType != null and sourceType != '')"> and t.SOURCE_TYPE = #{sourceType} </if>
        <if test="(pId != null and pId != '')"> and t.P_ID = #{pId} </if>
        <if test="(name != null and name != '')"> and t.NAME = #{name} </if>
        <if test="(dataCount != null and dataCount != '')"> and t.DATA_COUNT = #{dataCount} </if>
        <if test="(errorColunm != null and errorColunm != '')"> and t.ERROR_COLUNM = #{errorColunm} </if>
        <if test="(errorDesc != null and errorDesc != '')"> and t.ERROR_DESC = #{errorDesc} </if>
    </sql>

    <insert id="insertHlhtDataCheck" parameterType="com.winning.hic.model.HlhtDataCheck">
        <selectKey resultType="String"  order="BEFORE"  keyProperty="id">SELECT CAST(NEWID() AS VARCHAR(36)) AS ID</selectKey>
        INSERT INTO HLHT_DATA_CHECK
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="(id != null and id != '')"> ID , </if>
            <if test="(sourceType != null and sourceType != '')"> SOURCE_TYPE , </if>
            <if test="(pId != null and pId != '')"> P_ID , </if>
            <if test="(name != null and name != '')"> NAME , </if>
            <if test="(dataCount != null and dataCount != '')"> DATA_COUNT , </if>
            <if test="(errorColunm != null and errorColunm != '')"> ERROR_COLUNM , </if>
            <if test="(errorDesc != null and errorDesc != '')"> ERROR_DESC , </if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="(id != null and id != '')"> #{id , jdbcType= VARCHAR },  </if>
            <if test="(sourceType != null and sourceType != '')"> #{sourceType , jdbcType= INTEGER },  </if>
            <if test="(pId != null and pId != '')"> #{pId , jdbcType= VARCHAR },  </if>
            <if test="(name != null and name != '')"> #{name , jdbcType= VARCHAR },  </if>
            <if test="(dataCount != null and dataCount != '')"> #{dataCount , jdbcType= INTEGER },  </if>
            <if test="(errorColunm != null and errorColunm != '')"> #{errorColunm , jdbcType= VARCHAR },  </if>
            <if test="(errorDesc != null and errorDesc != '')"> #{errorDesc , jdbcType= VARCHAR },  </if>
        </trim>
    </insert>

    <update id="updateHlhtDataCheck" parameterType="com.winning.hic.model.HlhtDataCheck">
        UPDATE HLHT_DATA_CHECK
        <set>
            <trim suffixOverrides=",">
                <if test="(id != null and id != '')"> ID , </if>
                <if test="(sourceType != null and sourceType != '')"> SOURCE_TYPE , </if>
                <if test="(pId != null and pId != '')"> P_ID , </if>
                <if test="(name != null and name != '')"> NAME , </if>
                <if test="(dataCount != null and dataCount != '')"> DATA_COUNT , </if>
                <if test="(errorColunm != null and errorColunm != '')"> ERROR_COLUNM , </if>
                <if test="(errorDesc != null and errorDesc != '')"> ERROR_DESC , </if>
            </trim>
        </set>
        <where>
            <if test="(id != null and id != '')"> and ID = #{ id }   </if>
            <if test="(id !=null or id!='') and (map.pks != null and map.pks != '')">
                and (ID) in
                <foreach item="item" collection="map.pks" open="(" separator="," close=")"> #{item}</foreach>
            </if>
        </where>
    </update>

    <delete id="deleteHlhtDataCheck" parameterType="com.winning.hic.model.HlhtDataCheck">
        delete from  HLHT_DATA_CHECK
        <where>
            <if test="(id != null and id != '')"> and ID = #{ id }   </if>
            <if test="(id !=null or id!='') and (map.pks != null and map.pks != '')">
                and (ID) in
                <foreach item="item" collection="map.pks" open="(" separator="," close=")"> #{item}</foreach>
            </if>
        </where>
    </delete>


    <select id="selectHlhtDataCheck" resultMap="hlhtDataCheckResult" parameterType="com.winning.hic.model.HlhtDataCheck">
        SELECT * FROM HLHT_DATA_CHECK t
        <where>
            <include refid="sql-hlhtDataCheck" />
        </where>
    </select>

    <select id="selectHlhtDataCheckList" resultMap="hlhtDataCheckResultForList" parameterType="com.winning.hic.model.HlhtDataCheck">
        SELECT
        <if test="row.count != null and row.count != ''"> top ${row.count} </if>
        * FROM HLHT_DATA_CHECK t
        <where>
            <include refid="sql-hlhtDataCheck" />
        </where>
        ORDER BY t.ID DESC
    </select>

    <select id="selectHlhtDataCheckCount" resultType="int" parameterType="com.winning.hic.model.HlhtDataCheck">
        select count(1) from  HLHT_DATA_CHECK t
        <where>
            <include refid="sql-hlhtDataCheck" />
        </where>
    </select>

    <select id="selectHlhtDataCheckPageList" resultMap="hlhtDataCheckResult" parameterType="com.winning.hic.model.HlhtDataCheck">
        SELECT * FROM (
        SELECT t.* ,
        ROW_NUMBER() OVER ( ORDER BY t.ID DESC ) AS _RN
        FROM HLHT_DATA_CHECK t
        <where>
            <include refid="sql-hlhtDataCheck" />
        </where>
        <!-- order by t.ID asc -->
        ) TEMP_TABLE WHERE _RN BETWEEN  #{row.first} + 1 AND #{row.first} + #{row.count}
    </select>


</mapper>